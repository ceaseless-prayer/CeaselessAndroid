<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- HACK. Styling preferences is very messy/convoluted/broken in android -->
    <!-- Hence we use the following two styles to apply and undo a specific change only when people are in the preferences screen. -->
    <style name="AppTheme.PreferenceScreen">
        <item name="colorAccent">@color/controlColor</item>
    </style>
    <style name="AppTheme.RevertFromPreferenceScreen">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- KitKat phones like the Kindle Fire need this to make the overflow icons white. -->
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
    </style>

</resources>
