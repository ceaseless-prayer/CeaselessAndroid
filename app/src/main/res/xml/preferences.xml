<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference android:title="Prayer reminders:"
        android:defaultValue="true"
        android:summaryOn="Reminders are set."
        android:summaryOff="No reminders."
        android:key="showNotifications"/>
    <org.theotech.ceaselessandroid.TimePickerDialogPreference
        android:title="Prayer reminder time:"
        android:key="notificationTime"
        android:defaultValue="@string/default_notification_time"
        android:dialogTitle="Edit reminder time:"
        android:negativeButtonText="Cancel"
        android:positiveButtonText="OK"
        android:widgetLayout="@layout/notification_time_display"/>
</PreferenceScreen>