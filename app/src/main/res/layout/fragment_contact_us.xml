<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="org.theotech.ceaselessandroid.fragment.ContactUsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/contact_us_margin"
        android:layout_marginTop="20dp"
        android:gravity="center|start"
        android:text="@string/contact_us_message"
        android:textSize="20sp" />

    <Button
        android:id="@+id/contact_us_button"
        android:layout_width="@dimen/contact_us_button_width"
        android:layout_height="@dimen/contact_us_button_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/contact_us_margin"
        android:background="@color/buttonDefault"
        android:gravity="center"
        android:shadowColor="@color/buttonDefaultShadow"
        android:shadowDx="@integer/button_default_shadow_dx"
        android:shadowDy="@integer/button_default_shadow_dy"
        android:shadowRadius="@integer/button_default_shadow_radius"
        android:text="@string/contact_us_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/contact_us_margin"
        android:gravity="center|start"
        android:text="@string/contact_us_social"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/contact_us_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fb_image"
            android:layout_width="@dimen/fb_image_width"
            android:layout_height="@dimen/fb_image_height"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp" />

        <ImageView
            android:id="@+id/twitter_image"
            android:layout_width="@dimen/twitter_image_width"
            android:layout_height="@dimen/twitter_image_height" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/contact_us_margin"
        android:autoLink="web"
        android:gravity="center|start"
        android:text="@string/contact_us_web"
        android:textSize="20sp" />

</LinearLayout>
